sudo aptitude install libncurses-dev libsdl-dev  git-core xclip pkg-config
git clone  git://github.com/koo5/lemon.git
cd lemon/lemon2
make lgl
./lgl


lemon2:
right ctrl +
f2:fullscreen
f9,10:scale -,+
f12:quit
tab: cycle thru terminals and empty terminal
any key:spawn bash in empty terminal
mouse: move terminal, camera or both


