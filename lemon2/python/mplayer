
mplayer=getface()
fork(mplayer, "")
setlabel(mplayer, "mplayer")

def mplayer_load_playlist():
    global playlist
    f=open("~/playlist", "r")
    playlist=f.readlines()

def mplayer_new_playlist():
    type(mplayer, "\3 find ~/music > ~/playlist\n")
    mplayer_load_playlist()

def destroy_mplayer():
    freeface(mplayer)

beforefinish.append(destroy_mplayer)


